<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>WSO2 Open Banking - Event Notifications API</display-name>
    <description>WSO2 Open Banking - Event Notifications API</description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>WEB-INF/beans.xml</param-value>
    </context-param>

    <filter>
        <filter-name>HttpHeaderSecurityFilter</filter-name>
        <filter-class>org.apache.catalina.filters.HttpHeaderSecurityFilter</filter-class>
        <init-param>
            <param-name>hstsEnabled</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>HttpHeaderSecurityFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>EventCreationJAXServlet</servlet-name>
        <display-name>EventCreation JAX-WS/JAX-RS Servlet</display-name>
        <description>EventCreation JAX-WS/JAX-RS Endpoint</description>
        <servlet-class>
            org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet
        </servlet-class>
        <init-param>
            <param-name>service-list-stylesheet</param-name>
            <param-value>servicelist.css</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>

        <init-param>
            <param-name>jaxrs.serviceClasses</param-name>
            <param-value>
                org.wso2.financial.services.accelerator.event.notifications.endpoint.api.EventCreationEndpoint
            </param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>EventPollingJAXServlet</servlet-name>
        <display-name>EventPolling JAX-WS/JAX-RS Servlet</display-name>
        <description>EventPolling JAX-WS/JAX-RS Endpoint</description>
        <servlet-class>
            org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet
        </servlet-class>
        <init-param>
            <param-name>service-list-stylesheet</param-name>
            <param-value>servicelist.css</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>

        <init-param>
            <param-name>jaxrs.serviceClasses</param-name>
            <param-value>
                org.wso2.financial.services.accelerator.event.notifications.endpoint.api.EventPollingEndpoint
            </param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>EventSubscriptionJAXServlet</servlet-name>
        <display-name>EventSubscription JAX-WS/JAX-RS Servlet</display-name>
        <description>EventSubscription JAX-WS/JAX-RS Endpoint</description>
        <servlet-class>
            org.apache.cxf.jaxrs.servlet.CXFNonSpringJaxrsServlet
        </servlet-class>
        <init-param>
            <param-name>service-list-stylesheet</param-name>
            <param-value>servicelist.css</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.classnames</param-name>
            <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>

        <init-param>
            <param-name>jaxrs.serviceClasses</param-name>
            <param-value>
                org.wso2.financial.services.accelerator.event.notifications.endpoint.api.EventSubscriptionEndpoint
            </param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>EventCreationJAXServlet</servlet-name>
        <url-pattern>/create-events/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventPollingJAXServlet</servlet-name>
        <url-pattern>/events/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EventSubscriptionJAXServlet</servlet-name>
        <url-pattern>/subscription/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
</web-app>
